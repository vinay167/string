#include<iostream>
using namespace std;
int main()
{
    int length,p,l,length1,length2,h,m;
    int v=0,k=0,g=0,n=0,x=0;
    char o;
    string s1,s2,s3;
    cout<<"Enter the first string: ";
    cin>>s1;
    cout<<"Enter the second string: ";
    cin>>s2;
    length1=s2.length();
    length=s1.length();
    for(int i=0;i<length;i++)
    {
        p=(int)s1[i];
        v=p-96;
        cout<<v<<",";
    }
    cout<<""<<endl;
    for(int i=0;i<length1;i++)
    {
        l=(int)s2[i];
        k=l-96;
        cout<<k<<",";
    }
    cout<<"\nDifferences"<<endl;
    for(int i=0;i<length1;i++)
    {
        g=(int)s1[i]-(int)s2[i];
        //h=g-96;
        cout<<g<<",";
    }
    cout<<"\nEnter the third string"<<endl;
    cin>>s3;
    length2=s3.length();
    for(int i=0;i<length2;i++)
    {
        m=(int)s3[i];
        x=(int)s1[i]-(int)s2[i];
        n=m-96;
        n=n-x;
        //o=char(n);
        if(n==1)
        {
            cout<<"a";
        }
        else if(n==2)
        {
            cout<<"b";
        }
        else if(n==3)
        {
            cout<<"c";
        }
        //cout<<n<<",";
    }
}
